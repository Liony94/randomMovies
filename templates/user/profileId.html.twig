{% extends 'base.html.twig' %}

{% block title %}Hello UserProfileController!{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <!-- Profile Header -->
        <div class="bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 p-4 rounded-lg shadow-lg flex items-center">
            <img class="h-24 w-24 rounded-full border-4 border-white" src="{{ user.profileImage }}" alt="User Image">
            <div class="ml-4 text-white">
                <h1 class="text-2xl font-bold">{{ user.username }}</h1>
                <p>25, New York</p>
            </div>
        </div>
        <!-- Stats and Actions -->
        <div class="mt-4 bg-white p-4 rounded-lg shadow-lg flex justify-between">
            <div>
                <h3 class="text-xl">Stats</h3>
                <p>Matches: 20</p>
                <p>Swipes: 100</p>
            </div>
            <div>
                <button class="bg-blue-500 text-white p-2 rounded-lg">Edit Profile</button>
                <button class="bg-red-500 text-white p-2 rounded-lg ml-2">Logout</button>
            </div>
        </div>
    </div>
{% endblock %}
