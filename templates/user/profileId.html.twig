{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.username }}{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <!-- Profile Header -->
        <div class="bg-gradient-to-r from-cyan-600 via-cyan-400 to-purple-300 p-4 rounded-lg shadow-lg flex flex-col md:flex-row items-center mb-4">
            <!-- User Info -->
            <div class="flex flex-col items-center mb-4 md:mb-0 md:flex-row">
                <img class="h-24 w-24 rounded-full border-4 border-white" src="{{ user.profileImage }}" alt="User Image">
                <div class="text-center md:text-left ml-0 md:ml-4 text-white">
                    <h1 class="text-2xl font-bold">{{ user.username }}</h1>
                    <p>25, New York</p>
                </div>
            </div>

            <!-- Stats and Actions -->
            <div class="myCard ml-0 md:ml-auto mt-4 md:mt-0">
                <div class="innerCard">
                    <div class="frontSide">
                        <p class="title">Mes Stats</p>
                        <p>Clique ici</p>
                    </div>
                    <div class="backSide">
                        <p class="title">Films</p>
                        <p>Leave Me</p>
                        <p class="title">Séries</p>
                        <p>Leave Me</p>
                        <p class="title">Animes</p>
                        <p>Leave Me</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Last liked movie -->
            <div class="bg-white p-4 rounded-lg shadow-lg">
                <h3 class="text-xl">Dernier film aimé</h3>
                {% if lastLikedMovie is defined %}
                    <p>Titre : {{ lastLikedMovie.title }}</p>
                    <img src="https://image.tmdb.org/t/p/w300{{ lastLikedMovie.posterPath }}" alt="test">
                {% else %}
                    <p>Aucun film aimé pour le moment.</p>
                {% endif %}
                <button class="bg-blue-500 text-white p-2 rounded-lg mt-2">Voir plus</button>
            </div>

            <!-- Last liked series -->
            <div class="bg-white p-4 rounded-lg shadow-lg">
                <h3 class="text-xl">Dernière série aimée</h3>
                {% if lastLikedSeries is defined %}
                    <p>Titre : {{ lastLikedSeries.title }}</p>
                    <img src="https://image.tmdb.org/t/p/w300{{ lastLikedSeries.posterPath }}" alt="test">
                {% else %}
                    <p>Aucune série aimée pour le moment.</p>
                {% endif %}
                <button class="bg-blue-500 text-white p-2 rounded-lg mt-2">Voir plus</button>
            </div>

            <!-- Last liked animes -->
            <div class="bg-white p-4 rounded-lg shadow-lg">
                <h3 class="text-xl">Dernier anime aimé</h3>
                {% if lastLikedAnimes is defined %}
                    <p>Titre : {{ lastLikedAnimes.title }}</p>
                    <img src="https://image.tmdb.org/t/p/w300{{ lastLikedAnimes.posterPath }}" alt="test">
                {% else %}
                    <p>Aucun animé aimé pour le moment.</p>
                {% endif %}
                <button class="bg-blue-500 text-white p-2 rounded-lg mt-2">Voir plus</button>
            </div>
        </div>
    </div>
{% endblock %}
