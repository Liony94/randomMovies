{% extends 'base.html.twig' %}

{% block body %}
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            <h1 class="text-base font-bold text-indigo-600">
                Mes amis
            </h1>
            <a href="{{ path('app_user_friends_search') }}" class="text-3xl font-bold text-gray-700 hover:text-gray-600 transition duration-150 ease-in-out">
                Clique ici pour ajouter des amis
            </a>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
            {% for friend in friends %}
                <div class="w-full rounded-lg p-12 flex flex-col justify-center items-center shadow-md hover:shadow-xl transition-shadow duration-300">
                    <a href="{{ path('app_user_profile_id', {'id': friend.id}) }}" class="flex flex-col justify-center items-center">
                        <div class="mb-8">
                            <img class="object-center object-cover rounded-full h-36 w-36" src="{{ friend.getProfileImage() }}" alt="photo">
                        </div>
                        <div class="text-center">
                            <p class="darkModeTextWhite text-xl text-gray-700 font-bold mb-2">{{ friend.username }}</p>
                        </div>
                    </a>
                    <div class="mt-4 flex flex-col items-center space-y-2">
                        <a href="{{ path('app_user_match', {'id': friend.id}) }}" class="text-sm font-medium">Match</a>
                        <form action="{{ path('app_user_friends_remove', {'id': friend.id}) }}" method="post">
                            <button type="submit" class="text-red-600 text-sm font-semibold">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
