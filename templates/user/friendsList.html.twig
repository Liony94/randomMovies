{% extends 'base.html.twig' %}

{% block body %}
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            <h2 class="text-base font-bold text-indigo-600">
                Mes amis
            </h2>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
            {% for friend in friends %}
                <a href="{{ path('app_user_profile_id', {'id': friend.id}) }}" class="w-full bg-white rounded-lg p-12 flex flex-col justify-center items-center shadow-md hover:shadow-xl transition-shadow duration-300">
                    <div class="mb-8">
                        <img class="object-center object-cover rounded-full h-36 w-36" src="{{ friend.getProfileImage() }}" alt="photo">
                    </div>
                    <div class="text-center">
                        <p class="text-xl text-gray-700 font-bold mb-2">{{ friend.username }}</p>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>
{% endblock %}
