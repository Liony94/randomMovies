{% extends 'base.html.twig' %}

{% block body %}
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            <h2 class="text-base font-bold">
                Demandes d'amis
            </h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for friendRequest in receivedFriendRequests %}
                <div class="w-full rounded-lg p-12 flex flex-col justify-center items-center transition-transform transform hover:-translate-y-1 hover:scale-105 shadow-lg hover:shadow-xl">
                    <div class="mb-8">
                        <img class="object-center object-cover rounded-full h-36 w-36" src="{{ friendRequest.sender.getProfileImage() }}" alt="photo">
                    </div>
                    <div class="text-center">
                        <p class="text-xl font-bold mb-2">{{ friendRequest.sender.getUsername() }}</p>
                        <div class="flex space-x-4">
                            <form action="{{ path('app_user_friends_requests_accept', { 'id': friendRequest.id }) }}" method="post">
                                <button type="submit" class="text-indigo-600 text-sm font-semibold">
                                    Accepter la demande
                                </button>
                            </form>
                            <form action="{{ path('app_user_friends_requests_decline', { 'id': friendRequest.id }) }}" method="post">
                                <button type="submit" class="text-red-600 text-sm font-semibold">
                                    Refuser la demande
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}