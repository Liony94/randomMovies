{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="login-box">
        {{ form_start(registrationForm) }}
        <div class="user-box">
            {{ form_widget(registrationForm.email, {'attr': {'required': 'required'}}) }}
            <label>Email</label>
        </div>
        <div class="user-box">
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'required': 'required', 'autocomplete': 'new-password'}}) }}
            <label>Password</label>
        </div>
        <div class="user-box">
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'required': 'required', 'autocomplete': 'new-password'}}) }}
            <label>Confirm Password</label>
        </div>
        {{ form_errors(registrationForm.plainPassword.first) }}
        {{ form_errors(registrationForm.plainPassword.second) }}
        {{ form_errors(registrationForm.plainPassword) }}
        <center>
            <button type="submit">
                S'inscrire
                <span></span>
            </button>
        </center>
        {{ form_end(registrationForm) }}

    </div>
{% endblock %}
